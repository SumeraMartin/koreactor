<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp"
	android:background="@color/white"
	tools:parentTag="android.widget.FrameLayout">

	<LinearLayout
		android:id="@+id/placeholderError"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:visibility="gone"
		tools:visibility="visible">

		<ImageView
			android:layout_width="48dp"
			android:layout_height="48dp"
			app:srcCompat="@drawable/ic_error" />

		<TextView
			android:id="@+id/placeholderErrorTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:layout_marginTop="16dp"
			android:text="@string/placeholder_error_title"
			android:textColor="@color/charcoal_grey"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/placeholderErrorText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="24dp"
			android:layout_marginLeft="40dp"
			android:layout_marginRight="40dp"
			android:gravity="center"
			android:lineSpacingExtra="2dp"
			android:text="@string/placeholder_error_text"
			android:textColor="@color/charcoal_grey"
			android:textSize="15sp" />

		<TextView
			android:id="@+id/placeholderErrorButton"
			android:layout_width="150dp"
			android:layout_height="40dp"
			android:background="@drawable/bg_round_accent"
			android:foreground="?selectableItemBackground"
			android:gravity="center"
			android:text="@string/placeholder_try_again"
			android:textColor="@color/white"
			android:textSize="14sp"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/placeholderEmpty"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:visibility="gone"
		tools:visibility="visible">

		<TextView
			android:id="@+id/placeholderEmptyTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:layout_marginTop="16dp"
			android:text="@string/placeholder_empty_title"
			android:textColor="@color/charcoal_grey"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/placeholderEmptyText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="24dp"
			android:layout_marginLeft="40dp"
			android:layout_marginRight="40dp"
			android:gravity="center"
			android:lineSpacingExtra="2dp"
			android:text="@string/placeholder_empty_text"
			android:textColor="@color/charcoal_grey"
			android:textSize="15sp" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/placeholderLoading"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:visibility="gone"
		tools:visibility="gone">

		<me.zhanghai.android.materialprogressbar.MaterialProgressBar
			android:layout_width="40dp"
			android:layout_height="40dp"/>

	</LinearLayout>

</merge>
